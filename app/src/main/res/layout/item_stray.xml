    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/delBtn"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="删除"
        android:gravity="center"
        android:fontFamily="@font/source_regular"
        android:background="#FFF8EC"
        app:layout_constraintEnd_toEndOf="@+id/to_menu"
        app:layout_constraintTop_toBottomOf="@+id/to_menu" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/to_menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_menu_down"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutCompat9"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutCompat9" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/photoContainer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/img_photo"
        android:scaleType="center"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoContainer">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现地点："
                android:textColor="@color/text_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="饭都花园" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现时间："
                android:textColor="@color/text_gray" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/find_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2024-5-5   20: 60" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout10"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userHeadImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/img_headimage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="用户名"
            app:layout_constraintEnd_toStartOf="@+id/commentsBtn"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toEndOf="@+id/userHeadImage"
            app:layout_constraintTop_toTopOf="@+id/userHeadImage" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/send_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="2024-5-1"
            app:layout_constraintEnd_toStartOf="@+id/commentsBtn"
            app:layout_constraintStart_toEndOf="@+id/userHeadImage"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/commentsBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/img_to_comments_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/commentsCount"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/commentsCount"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="20"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/collectBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/collectBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/img_uncollected_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/collectCount"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/collectCount"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:text="20"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
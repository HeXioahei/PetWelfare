<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mine.item.ItemCollectionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/article"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="日常分享"
            android:background="@drawable/bg_cursor"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/loss"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="走失宠物"
            android:gravity="center"
            android:background="@drawable/bg_cursor"
            app:layout_constraintStart_toEndOf="@+id/article"
            app:layout_constraintEnd_toStartOf="@id/stray" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/stray"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="流浪动物"
            android:gravity="center"
            android:background="@drawable/bg_cursor"
            app:layout_constraintStart_toEndOf="@+id/loss"
            app:layout_constraintEnd_toStartOf="@id/orgs" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/orgs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="热心组织"
            android:gravity="center"
            android:background="@drawable/bg_cursor"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/collection_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />


</androidx.constraintlayout.widget.ConstraintLayout>
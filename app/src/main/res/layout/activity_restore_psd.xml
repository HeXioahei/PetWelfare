<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.begin.activity.RestorePsdActivity"
    android:background="@color/background">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout14"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/returnBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_return_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mf"
            android:text="修改密码"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout14"
        tools:layout_editor_absoluteX="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/img_mailbox"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/mailboxInReset"
            app:layout_constraintStart_toStartOf="@+id/mailboxInReset"
            app:layout_constraintTop_toTopOf="@+id/mailboxInReset" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mailboxInReset"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_input"
            android:fontFamily="@font/source_regular"
            android:hint="邮箱"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="40dp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/showMenuBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_menu"
            android:elevation="1dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/mailboxInReset"
            app:layout_constraintEnd_toEndOf="@+id/mailboxInReset"
            app:layout_constraintTop_toTopOf="@+id/mailboxInReset" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/dropdown_menu_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/bg_drop_menu"
            android:elevation="2dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/mailboxInReset"
            tools:layout_editor_absoluteX="20dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dropdown_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp" />

        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/img_psd"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/psdInReset"
            app:layout_constraintStart_toStartOf="@+id/psdInReset"
            app:layout_constraintTop_toTopOf="@+id/psdInReset" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/psdInReset"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_input"
            android:fontFamily="@font/source_regular"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingHorizontal="40dp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mailboxInReset" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/showPsdBtn1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/btn_show_psd"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/psdInReset"
            app:layout_constraintEnd_toEndOf="@+id/psdInReset"
            app:layout_constraintTop_toTopOf="@+id/psdInReset" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/img_confirm_psd"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/psdConfirmInReset"
            app:layout_constraintStart_toStartOf="@+id/psdConfirmInReset"
            app:layout_constraintTop_toTopOf="@+id/psdConfirmInReset" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/psdConfirmInReset"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_input"
            android:fontFamily="@font/source_regular"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:paddingHorizontal="40dp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/psdInReset" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/showPsdBtn2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/btn_show_psd"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/psdConfirmInReset"
            app:layout_constraintEnd_toEndOf="@+id/psdConfirmInReset"
            app:layout_constraintTop_toTopOf="@+id/psdConfirmInReset" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/verification"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_input_verification"
            android:fontFamily="@font/source_regular"
            android:hint="验证码"
            android:inputType="number"
            android:paddingHorizontal="20dp"
            android:paddingBottom="8dp"
            android:shadowColor="@color/myShadow"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            app:layout_constraintStart_toStartOf="@+id/psdConfirmInReset"
            app:layout_constraintTop_toBottomOf="@+id/psdConfirmInReset" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/getVerificationBtn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_get_veri"
            android:fontFamily="@font/source_regular"
            android:gravity="center"
            android:text="获取验证码"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/psdConfirmInReset" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.54" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5985401" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/restoreBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_restore_psd"
            android:foreground="@drawable/ripple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verification" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>